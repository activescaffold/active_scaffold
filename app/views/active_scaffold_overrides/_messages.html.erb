<% for name in %i[info warning error] %>
  <% if flash[name].present? %>
    <%= as_element :"#{name}_message", class: 'as-msg' do %>
      <%= display_message flash[name] %>
      <% flash.delete name %>
      <% if request.xhr? %>
        <%= as_element :message_close, as_(:close), class: 'msg-close', title: as_(:close) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
