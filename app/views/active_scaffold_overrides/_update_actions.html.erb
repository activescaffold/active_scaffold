<div class="active-scaffold-header">
  <div class="actions">
    <% active_scaffold_config.action_links.member.each do |link| -%>
      <% next unless link.action == 'index' -%>
      <% next if skip_action_link(link) -%>
      <%= render_action_link(link, record, :authorized => record.authorized_for?(:crud_type => link.crud_type, :action => link.action)) -%>
    <% end -%>
  </div>
</div>
