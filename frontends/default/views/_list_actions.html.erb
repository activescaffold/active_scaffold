<% action_links ||= active_scaffold_config.action_links %>
<td class="actions"><table cellpadding="0" cellspacing="0">
  <tr>
    <td class="indicator-container">
      <%= loading_indicator_tag(:action => :record, :id => record.id) %>
    </td>
    <% action_links.each :member do |link| -%>
      <% next if skip_action_link(link, record) -%>
      <td>
        <%= raw record.authorized_for?(:crud_type => link.crud_type, :action => link.action) ? render_action_link(link, url_options, record) : "<a class='disabled #{link.action}'>#{link.label}</a>" -%>
      </td>
    <% end -%>
  </tr>
</table>
</td>

